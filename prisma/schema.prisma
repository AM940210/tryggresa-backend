datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trip {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId

  firstName    String
  lastName     String

  date         String
  time         String
  returnDate   String?
  returnTime   String?

  fromAddress  String?
  toAddress    String?
  
  people       Int
  wheelchair   Boolean
  tripCategory String?
  price        Int @default(125)
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique
  password  String
  createdAt DateTime @default(now())
}

